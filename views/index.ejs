<!doctype html>
<html>

<head>
  <title>Movie App</title>
  <% include head %>
</head>

<body>
  <% include navbar %>

  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h1>Now Playing</h1>
      </div>
      <div class="col-sm-12">
        <!-- we are passing { results: Array<Movie> from route handler res.render(...) } -->
        <% results.forEach(movie=>{ %>
        <div class="col-sm-4 col-md-3 poster">
          <a href="/movie/<%= movie.id %>" target="_blank">
            <img src="<%= movie.poster_path %>" alt="<%= movie.title %>" />
            <h4><%= movie.title %></h4>
          </a>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</body>

</html>